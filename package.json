  },
  "devDependencies": {
    "cache-loader": "^4.1.0",
    "concurrently": "4.1.2",
    "eslint-plugin-jquery": "^1.5.1",
    "jasmine-core": "3.4.0",
    "karma": "4.3.0",
    "karma-chrome-launcher": "3.1.0",
    "karma-firefox-launcher": "1.2.0",
    "karma-jasmine": "2.0.1",
    "sinon": "7.4.1",
    "svgo": "^1.2.2",
    "tinypng-cli": "^0.0.7"
  },
  "scripts": {
    "start": "concurrently --kill-others \"python manage.py runserver 0.0.0.0:8000\" \"npm run watch\"",
    "static": "webpack --config webpack.static.config.js --mode production --display minimal --bail",
    "prebuild": "npm run static",
    "build": "webpack --mode production --bail",
    "prewatch": "npm run static",
    "watch": "webpack --watch --mode development --display minimal --bail"
